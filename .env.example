# ============================================
# NCC Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================
# Server Configuration
# ============================================
# Port for the server (defaults to 5000 if not set)
PORT=5000

# Environment: development, production, or test
NODE_ENV=development

# ============================================
# MongoDB Configuration
# ============================================
# MongoDB Atlas connection details
MONGO_USER=your-mongodb-username
MONGO_PASSWORD=your-mongodb-password
MONGO_CLUSTER=cluster0.xxxxx.mongodb.net
MONGO_DBNAME=your-database-name

# ============================================
# JWT Authentication
# ============================================
# Secret key for JWT token signing (use a strong, random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ============================================
# Firebase Admin SDK (for Vercel/Production)
# ============================================
# Only required if deploying to Vercel or using environment variables
# For local development, use serviceAccountKey.json file instead
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# ============================================
# Email Configuration (Nodemailer)
# ============================================
# Gmail or other SMTP email credentials
User_Email=your-email@gmail.com
User_Password=your-app-specific-password
# Sender email address (usually same as User_Email)
MAIL_FROM=your-email@gmail.com

# ============================================
# Stripe Payment Configuration
# ============================================
# Stripe secret key (starts with sk_)
STRIPE_PRIVATE_KEY=sk_test_your-stripe-secret-key

# Frontend base URL for payment redirects
FRONTEND_BASEURL=http://localhost:5173

# ============================================
# Security & Encryption
# ============================================
# Bcrypt salt rounds for password hashing (default: 10)
BCRYPT_SALT_ROUNDS=10

# ============================================
# Vercel Configuration (Auto-set by Vercel)
# ============================================
# This is automatically set by Vercel, don't set manually
# VERCEL=true
